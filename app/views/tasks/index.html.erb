<h1>Tasks</h1>

<table style="width: 100%;">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Due Date</th>
      <th>Status</th>
      <th>Priority</th>
      <th>Project</th>
      <th>Labels</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody style="text-align: center;">
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.formatted_due_date %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= task.project&.name %></td>
        <th><%= task.labels&.map(&:name)&.join(' | ') %></th>
        <td>
          <%= link_to 'Show', task %>
          <%= link_to 'Edit', edit_task_path(task) %>
          <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New task', new_task_path %>
